    <sql id="selectCrmContractVo">
        select p.contract_id, p.customer_id, p.order_id, p.contract_no, p.contract_name, p.contract_type, p.contract_status, p.contract_content, p.date_start, p.date_end, p.pay_method, p.total_money, p.sign_by, p.sign_by_name, p.sign_date, p.source_belong_to, p.belong_to, p.trasfer_date, p.trasfer_to, p.del_flag, p.create_by, p.create_time, p.update_by, p.update_time, p.remark, p.ext_input1, p.ext_input2, p.ext_input3, p.ext_input4, p.ext_input5, p.ext_contract_select1, p.ext_contract_select2, p.ext_contract_select3, p.ext_contract_select4, p.ext_contract_select5, p.ext_number1, p.ext_number2, p.ext_number3, p.ext_number4, p.ext_number5, p.ext_date1, p.ext_date2, p.ext_date3, p.ext_date4, p.ext_date5, p.ext_memo1,c.customer_name,c.customer_type,o.order_name from crm_contract p
    	left join crm_customer c on p.customer_id = c.customer_id
    	left join crm_order o on o.order_id = p.order_id
    	left join sys_user u on u.login_name=p.belong_to
        left join sys_dept d on u.dept_id=d.dept_id
    </sql>

    <select id="selectCrmContractList" parameterType="CrmContract" resultMap="CrmContractResult">
        <include refid="selectCrmContractVo"/>
        <where>  
        	p.del_flag='0'
            <if test="customerId != null "> and p.customer_id like concat('%', #{customerId}, '%')</if>
            <if test="contractNo != null  and contractNo != ''"> and p.contract_no like concat('%', #{contractNo}, '%')</if>
            <if test="contractName != null  and contractName != ''"> and p.contract_name like concat('%', #{contractName}, '%')</if>
            <if test="contractType != null  and contractType != ''"> and p.contract_type = #{contractType}</if>
            <if test="contractStatus != null  and contractStatus != ''"> and p.contract_status = #{contractStatus}</if>
            <if test="payMethod != null  and payMethod != ''"> and p.pay_method = #{payMethod}</if>
            <if test="totalMoney != null "> and p.total_money = #{totalMoney}</if>
            <if test="createBy != null  and createBy != ''"> and p.create_by = #{createBy}</if>
            <if test="params.customerName != null  and params.customerName != ''"> and c.customer_name like concat('%', #{params.customerName}, '%')</if>
			<if test="params.beginTime != null and params.beginTime != ''"><!-- 合同开始时间检索 -->
				AND date_format(p.date_start,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
			</if>
			<if test="params.endTime != null and params.endTime != ''"><!-- 合同结束时间检索 -->
				AND date_format(p.date_end,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
			</if>
			<!-- 数据范围过滤 -->
			${params.dataScope}
        </where>
    </select>
    
    <select id="selectCrmContractById" parameterType="Long" resultMap="CrmContractResult">
        <include refid="selectCrmContractVo"/>
