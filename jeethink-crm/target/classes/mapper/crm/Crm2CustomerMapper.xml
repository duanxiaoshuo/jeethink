    <select id="selectCrmCustomerListFollowMoreThan30" resultMap="CrmCustomerResult">
        select c.customer_id,
               c.customer_name,
               c.name_short,
               c.telephone,
               c.mobile,
               c.email,
               c.fax,
               c.website,
               c.zip,
               c.country,
               c.province,
               c.city,
               c.region,
               c.address,
               c.intrested_prodcut,
               c.industry,
               c.customer_status,
               c.customer_source,
               c.customer_degree,
               c.customer_priority,
               c.customer_credit,
               c.customer_type,
               c.customer_maturity,
               c.customer_category,
               c.get_date,
               c.source_belong_to,
               c.belong_to,
               c.trasfer_date,
               c.trasfer_to,
               c.share_date,
               c.is_share,
               c.avatar,
               c.qq,
               c.del_flag,
               c.create_by,
               c.create_time,
               c.update_by,
               c.update_time,
               c.remark
        FROM crm2_customer c
                 LEFT JOIN crm2_follow p ON p.customer_id = c.customer_id
        where p.follow_date is not null
          and DATEDIFF(now(), p.follow_date) > 30
          and c.del_flag = '0'
        ORDER BY p.follow_date DESC
    </select>

