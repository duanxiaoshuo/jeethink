    <sql id="selectCrmOrderVo">
        select p.order_id, p.order_code, p.contract_id, p.customer_id, p.order_name, p.total_price, p.cost_price, p.order_date, p.pay_type, p.valid_start, p.valid_end, p.order_status, p.picture, p.source_belong_to, p.belong_to, p.trasfer_date, p.trasfer_to, p.del_flag, p.create_by, p.create_time, p.update_by, p.update_time, p.remark, p.ext_input1, p.ext_input2, p.ext_input3, p.ext_input4, p.ext_input5, p.ext_order_price_select1, p.ext_order_price_select2, p.ext_order_price_select3, p.ext_order_price_select4, p.ext_order_price_select5, p.ext_number1, p.ext_number2, p.ext_number3, p.ext_number4, p.ext_number5, p.ext_date1, p.ext_date2, p.ext_date3, p.ext_date4, p.ext_date5, p.ext_memo1,c.customer_name,c.customer_type from crm_order p
    	left join crm_customer c on c.customer_id= p.customer_id
        left join sys_user u on u.login_name=p.belong_to
        left join sys_dept d on u.dept_id=d.dept_id
    </sql>

    <select id="selectCrmOrderList" parameterType="CrmOrder" resultMap="CrmOrderResult">
        <include refid="selectCrmOrderVo"/>
        <where>  
        	p.del_flag='0'
            <if test="orderCode != null  and orderCode != ''"> and p.order_code like concat('%', #{orderCode}, '%')</if>
            <if test="contractId != null "> and p.contract_id = #{contractId}</if>
            <if test="customerId != null "> and p.customer_id = #{customerId}</if>
            <if test="orderName != null  and orderName != ''"> and p.order_name like concat('%', #{orderName}, '%')</if>
            <if test="totalPrice != null "> and p.total_price = #{totalPrice}</if>
            <if test="orderStatus != null  and orderStatus != ''"> and p.order_status = #{orderStatus}</if>
            <if test="params.customerName != null  and params.customerName != ''"> and c.customer_name like concat('%', #{params.customerName}, '%')</if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
				AND date_format(p.create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
			</if>
			<if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
				AND date_format(p.create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
			</if>
            <!-- 数据范围过滤 -->
			${params.dataScope}
        </where>
        <if test="params.top != null and params.top != ''"><!-- top检索 -->
				LIMIT #{params.top}
		</if>
    </select>
    
    <select id="selectCrmOrderById" parameterType="Long" resultMap="CrmOrderResult">
        <include refid="selectCrmOrderVo"/>
        where p.order_id = #{orderId}
    </select>
        
