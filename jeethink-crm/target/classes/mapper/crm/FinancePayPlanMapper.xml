    <sql id="selectFinancePayPlanVo">
        select p.plan_id, p.customer_id, p.order_id,p.plan_name, p.plan_money, p.plan_date, p.plan_type, p.plan_times, p.plan_status, p.payed_money, p.need_money, p.over_days,p.source_belong_to, p.belong_to, p.trasfer_date, p.trasfer_to, p.del_flag, p.create_by, p.create_time, p.update_by, p.update_time, p.remark, p.ext_input1, p.ext_input2, p.ext_input3, p.ext_input4, p.ext_input5, p.ext_finance_pay_plan_select1, p.ext_finance_pay_plan_select2, p.ext_finance_pay_plan_select3, p.ext_finance_pay_plan_select4, p.ext_finance_pay_plan_select5, p.ext_number1, p.ext_number2, p.ext_number3, p.ext_number4, p.ext_number5, p.ext_date1, p.ext_date2, p.ext_date3, p.ext_date4, p.ext_date5, p.ext_memo1,o.order_name,c.customer_name from finance_pay_plan p
    	left join crm_order o on o.order_id = p.order_id
        left join crm_customer c on c.customer_id = p.customer_id
        left join sys_user u on u.login_name=p.belong_to
        left join sys_dept d on u.dept_id=d.dept_id
    </sql>

    <select id="selectFinancePayPlanList" parameterType="FinancePayPlan" resultMap="FinancePayPlanResult">
        <include refid="selectFinancePayPlanVo"/>
        <where>  
        	p.del_flag='0'
        	<if test="customerId != null "> and p.customer_id = #{customerId}</if>
            <if test="orderId != null "> and p.order_id = #{orderId}</if>
            <if test="planType != null  and planType != ''"> and p.plan_type = #{planType}</if>
            <if test="planTimes != null  and planTimes != ''"> and p.plan_times = #{planTimes}</if>
            <if test="planStatus != null  and planStatus != ''"> and p.plan_status = #{planStatus}</if>
            <if test="params.customerName != null  and params.customerName != ''"> and c.customer_name like concat('%', #{params.customerName}, '%')</if>
            <if test="params.orderName != null  and params.orderName != ''"> and o.order_name like concat('%', #{params.orderName }, '%')</if>
            <if test="params.beginPlanDate != null and params.beginPlanDate != ''"><!-- 计划回款开始时间检索 -->
				AND date_format(p.planDate,'%y%m%d') &gt;= date_format(#{params.beginPlanDate},'%y%m%d')
			</if>
			<if test="params.endPlanDate != null and params.endPlanDate != ''"><!-- 计划回款结束时间检索 -->
				AND date_format(p.planDate,'%y%m%d') &lt;= date_format(#{params.endPlanDate},'%y%m%d')
			</if>
			<!-- 数据范围过滤 -->
			${params.dataScope}
        </where>
    </select>
    
    <select id="selectFinancePayPlanById" parameterType="Long" resultMap="FinancePayPlanResult">
