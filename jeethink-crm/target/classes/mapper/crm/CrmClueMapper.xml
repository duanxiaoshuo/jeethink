    <!-- 查询超过30天未跟进的线索 -->
    <select id="selectCrmClueListFollowMoreThan30" resultMap="CrmClueResult">
        select p.clue_id, p.name, p.company, p.address, p.duty, p.mobile, p.email, p.qq, p.wechat, p.wangwang, p.msn, p.sex, p.clue_source, p.decision_level, p.market_activity, p.source_belong_to, p.belong_to, p.trasfer_date, p.trasfer_to, p.avatar, p.del_flag, p.create_by, p.create_time, p.update_by, p.update_time, p.remark
		FROM
			crm_clue p
			LEFT JOIN crm_clue_follow f ON f.clue_id = p.clue_id 
			where f.follow_date is not null and p.clue_status!=2 and  DATEDIFF(now(), f.follow_date)>30 and p.del_flag='0'
		ORDER BY
			f.follow_date DESC         
    </select>    
    
